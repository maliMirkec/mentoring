{% for tip in tips %}
  <section>
  </section>
    <article class="intro">
      <h2>{{ tip.name }}</h2>
      {% comment %} //- p #{tip.name} tips could be summarized to:
      //- ul
      //-   each advice in tip.list
      //-     li= advice.title {% endcomment %}
    <div class="row">
    </div>
      {% for advice in tip.list %}
        <div class="col">
          <div class="card wrapper wrapper--beta">
            <h4>{{ advice.title }}</h4>
            <ul>
              {% for item in advice.tips %}
                <li>{{ item }}</li>
              {% endfor %}
            </ul>
          </div>
        </div>
      {% endfor %}
    </article>
{% endfor %}
